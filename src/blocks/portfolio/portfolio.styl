.portfolio
  background portfolio-item_bg
  padding-bottom 80px
  padding-top 45px

.portfolio__works
  display flex
  flex-flow row wrap
  margin-top 50px
  justify-content center

.portfolio__item
  margin-bottom 15px
  margin-right 15px

.portfolio__item:nth-child(3n)
  margin-right 0

.portfolio__img
  height 281px
  overflow hidden
  width 380px

.portfolio__title
  box-shadow 0 3px 5px rgba(0, 0, 0, 0.25)
  color grey_light
  font-family font_sans-serif
  font-size 18px
  font-weight 600
  padding 26px 35px
